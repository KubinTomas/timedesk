
@using TImeDesk.ViewModel
@model ProjectWorkspaceDetailViewModel


<div class="Header" data-id="@Model.Project.Id" id="ProjectIdHolder">
    <div class="Title">@Model.Project.Name</div>
</div>
<div class="Body">
    <div class="UserProjects">
        <div class="CenterHeader">Users working on project</div>
        <div class="Divider"></div>

        <table class="table dataTable  table-hover " id="UserProjectTable">
            <thead class="">
            <tr>
                <th>Name</th>
                <th>Nickname</th>

                <th style="width: 100px;">Assign to project</th>

            </tr>
            </thead>
            <tbody id="ProjectBody">

            @foreach (var user in Model.UsersToAssign)
            {
                <tr>
                    <td>@user.ApplicationUser.UserName </td>
                    <td>Nickname </td>

                    <td><a user-id="@user.ApplicationUser.Id" class="btn-link addUserToProject" style="margin-left: 35%;"><i class="fa fa-plus" style="color: #B6B6B6;" aria-hidden="true"></i></a></td>

                </tr>
            }


            </tbody>
        </table>





    </div>

</div>

<script type="text/javascript">

    $(document).ready(function () {

        //Initialize data table
        $('#UserProjectTable').dataTable({


        });

    });

</script>
